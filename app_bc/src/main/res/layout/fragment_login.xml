<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/pad_35"
        android:layout_marginLeft="@dimen/pad_20"
        android:layout_marginRight="@dimen/pad_20"
        android:layout_marginTop="@dimen/pad_35"
        app:cardCornerRadius="@dimen/pad_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtForgotPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/pad_20"
                android:text="Forgot password?"
                android:textColor="@color/colorMediumGrey"
                android:textSize="@dimen/txt_size_13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/pad_30"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_main_onboarding" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ureview.utils.views.CustomTextView
                        android:id="@+id/uireview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/pad_5"
                        android:text="UReview"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/txt_size_20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.ureview.utils.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:textColor="@color/colorMediumGrey"
                        android:textSize="@dimen/txt_size_11sp"
                        app:layout_constraintRight_toRightOf="@+id/uireview"
                        app:layout_constraintTop_toBottomOf="@+id/uireview" />

                </android.support.constraint.ConstraintLayout>

                <com.ureview.utils.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_20"
                    android:text="Choose your option for Log in to UReview"
                    android:textColor="@color/color_vDarkGrey"
                    android:textSize="@dimen/txt_size_13sp" />

                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/txtTwitterLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20"
                    android:layout_marginRight="@dimen/pad_20"
                    android:layout_marginTop="@dimen/pad_35"
                    android:background="@drawable/bg_twitter"
                    android:gravity="center"
                    android:paddingBottom="@dimen/pad_13"
                    android:paddingTop="@dimen/pad_13"
                    android:text="Log in with Twitter"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/txt_size_14sp" />

                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/txtFbLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20"
                    android:layout_marginRight="@dimen/pad_20"
                    android:layout_marginTop="@dimen/pad_10"
                    android:background="@drawable/bg_fb"
                    android:gravity="center"
                    android:paddingBottom="@dimen/pad_13"
                    android:paddingTop="@dimen/pad_13"
                    android:text="Log in with Facebook"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/txt_size_14sp" />

                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/txtGplusLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20"
                    android:layout_marginRight="@dimen/pad_20"
                    android:layout_marginTop="@dimen/pad_10"
                    android:background="@drawable/bg_gplus"
                    android:gravity="center"
                    android:paddingBottom="@dimen/pad_13"
                    android:paddingTop="@dimen/pad_13"
                    android:text="Log in with Google Plus"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/txt_size_14sp" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>