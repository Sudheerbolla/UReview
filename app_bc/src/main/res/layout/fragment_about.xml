<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/pad_15">

    <com.ureview.utils.views.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/txt_size_11sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtAboutMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_5"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_size_14sp" />

    <com.ureview.utils.views.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_10"
        android:text="Email"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/txt_size_11sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_5"
        android:text="marilynandrew@domain.com"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_size_14sp" />

    <com.ureview.utils.views.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_10"
        android:text="Phone"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/txt_size_11sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_5"
        android:text="+91023456789"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_size_14sp" />

    <com.ureview.utils.views.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_10"
        android:text="Gender"
        android:textColor="@color/colorDarkGrey"
        android:textSize="@dimen/txt_size_11sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_5"
        android:text="Female"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_size_14sp" />

</LinearLayout>