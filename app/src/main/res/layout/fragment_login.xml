<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bg">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/pad_30"
        android:layout_marginEnd="@dimen/pad_15"
        android:layout_marginStart="@dimen/pad_15"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/pad_4"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/pad_3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/pad_30"
                android:gravity="center"
                android:orientation="vertical">

                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/uireview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_5"
                    android:drawablePadding="@dimen/pad_8"
                    android:drawableTop="@drawable/logo_main_onboarding"
                    android:text="UReview"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/txt_size_20sp"
                    app:txt_font_type="bold" />

                <com.ureview.utils.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_20"
                    android:text="How would you like to sign up ?"
                    android:textColor="@color/color_vDarkGrey"
                    android:textSize="@dimen/txt_size_14sp" />

                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/txtTwitterLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20"
                    android:layout_marginRight="@dimen/pad_20"
                    android:layout_marginTop="@dimen/pad_35"
                    android:background="@drawable/bg_twitter"
                    android:drawablePadding="@dimen/pad_15"
                    android:drawableStart="@drawable/ic_twitter"
                    android:gravity="center_vertical"
                    android:padding="@dimen/pad_10"
                    android:text="Log in with Twitter"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/txt_size_14sp" />

                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/txtFbLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20"
                    android:layout_marginRight="@dimen/pad_20"
                    android:layout_marginTop="@dimen/pad_10"
                    android:background="@drawable/bg_fb"
                    android:drawablePadding="@dimen/pad_15"
                    android:drawableStart="@drawable/ic_fb"
                    android:gravity="center_vertical"
                    android:padding="@dimen/pad_10"
                    android:text="Log in with Facebook"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/txt_size_14sp" />


                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/txtInstagramLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20"
                    android:layout_marginRight="@dimen/pad_20"
                    android:layout_marginTop="@dimen/pad_10"
                    android:background="@drawable/bg_instagram"
                    android:drawablePadding="@dimen/pad_15"
                    android:drawableStart="@drawable/ic_google_plus"
                    android:gravity="center_vertical"
                    android:padding="@dimen/pad_10"
                    android:text="Log in with Google+"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/txt_size_14sp" />

            </LinearLayout>

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/pad_10"
                android:layout_marginRight="@dimen/pad_10"
                android:textColor="@color/color_vvvDarkGrey"
                android:textSize="@dimen/txt_size_14sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>