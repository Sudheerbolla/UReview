<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imgLocation"
            android:background="@mipmap/map_pin_white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/pad_5">

            <com.ureview.utils.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pad_15"
                android:padding="@dimen/pad_5"
                android:text="Synth polaroid bio"
                android:textColor="@color/app_color_dark"
                android:textSize="@dimen/txt_size_20sp" />

            <com.ureview.utils.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/pad_15"
                android:text="Hotel/Resort"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_size_14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_5"
                android:layout_marginStart="@dimen/pad_15"
                android:layout_marginTop="@dimen/pad_5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_l_copy" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_l_copy" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_l_copy" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_l_copy" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_l_copy" />

                <com.ureview.utils.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(302)"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/txt_size_16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_40" />

        </LinearLayout>

        <com.ureview.utils.views.CircleImageView
            android:id="@+id/imgLocation"
            android:layout_width="@dimen/pad_60"
            android:layout_height="@dimen/pad_60"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/pad_3"
            android:src="@drawable/location_active_copy"
            app:civ_border_color="@color/color_white"
            app:civ_border_width="@dimen/pad_3" />

    </RelativeLayout>

</LinearLayout>