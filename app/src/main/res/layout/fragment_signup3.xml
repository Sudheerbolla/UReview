<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bg">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/pad_25"
        app:cardCornerRadius="@dimen/pad_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/pad_30"
            android:gravity="center"
            android:orientation="vertical">

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/uireview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_5"
                android:drawablePadding="@dimen/pad_8"
                android:drawableTop="@drawable/logo_main_onboarding"
                android:text="YouReview"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/txt_size_20sp" />

            <com.ureview.utils.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/pad_15"
                android:layout_marginStart="@dimen/pad_15"
                android:layout_marginTop="@dimen/pad_20"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="Congratulations! Your sign up is completed. You can watch reviews and make your own reviews with YouReview!"
                android:textColor="@color/color_vDarkGrey"
                android:textSize="@dimen/txt_size_13sp" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_20"
                android:layout_marginRight="@dimen/pad_20"
                android:layout_marginTop="@dimen/pad_30"
                android:background="@drawable/bg_custom_btn_app_color"
                android:gravity="center"
                android:paddingBottom="@dimen/pad_13"
                android:paddingTop="@dimen/pad_13"
                android:text="Take me to Homepage"
                android:textColor="@color/color_white"
                android:textSize="@dimen/txt_size_14sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>