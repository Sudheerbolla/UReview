<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/pad_6">

    <ImageView
        android:id="@+id/imgVideo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_image_rounded_corners" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgVideo"
        android:layout_alignLeft="@+id/imgVideo"
        android:layout_marginBottom="@dimen/pad_8"
        android:layout_marginLeft="@dimen/pad_10"
        android:text="(405)"
        android:textColor="@color/color_white"
        android:textSize="@dimen/txt_size_12sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgVideo"
        android:layout_marginTop="@dimen/pad_5"
        android:text="Hella Narwhal Cos"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_size_13sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/imgVideo"
        android:layout_below="@+id/txtName"
        android:layout_marginTop="@dimen/pad_2"
        android:maxLines="2"
        android:text="Mirpur 10, Dhaka"
        android:textColor="@color/color_vvvDarkGrey"
        android:textSize="@dimen/txt_size_11sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtViewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTags"
        android:layout_marginTop="@dimen/pad_2"
        android:drawableLeft="@drawable/view_small_copy"
        android:drawablePadding="@dimen/pad_3"
        android:text="408121"
        android:textColor="@color/color_vvvDarkGrey"
        android:textSize="@dimen/txt_size_11sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTags"
        android:layout_marginLeft="@dimen/pad_10"
        android:layout_marginTop="@dimen/pad_2"
        android:layout_toRightOf="@+id/txtViewCount"
        android:text="232"
        android:textColor="@color/color_vvvDarkGrey"
        android:textSize="@dimen/txt_size_11sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtRatingsNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDistance"
        android:layout_marginTop="@dimen/pad_2"
        android:layout_toRightOf="@+id/ratingBar"
        android:text="(405)"
        android:textColor="@color/color_vvvDarkGrey"
        android:textSize="@dimen/txt_size_11sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/CustomRatingBarM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDistance"
        android:layout_marginRight="@dimen/pad_5"
        android:layout_marginTop="@dimen/pad_4"
        android:isIndicator="true"
        android:numStars="5" />

</RelativeLayout>