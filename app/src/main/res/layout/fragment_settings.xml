<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/pad_15"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/colorNormalGrey" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/pad_25"
                android:drawableStart="@drawable/share_app_copy"
                android:gravity="center_vertical"
                android:padding="@dimen/pad_16"
                android:text="Share App"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_size_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/colorNormalGrey" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/pad_25"
                android:drawableStart="@drawable/privacy_copy"
                android:gravity="center_vertical"
                android:padding="@dimen/pad_16"
                android:text="Privacy Policies"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_size_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/colorNormalGrey" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/pad_25"
                android:drawableStart="@drawable/terms_and_condition_copy"
                android:gravity="center_vertical"
                android:padding="@dimen/pad_16"
                android:text="Terms &amp; Conditions"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_size_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/colorNormalGrey" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/pad_25"
                android:drawableStart="@drawable/help_copy"
                android:gravity="center_vertical"
                android:padding="@dimen/pad_13"
                android:text="Help Center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_size_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/colorNormalGrey" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtContactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/pad_25"
                android:drawableStart="@drawable/contact_copy"
                android:gravity="center_vertical"
                android:padding="@dimen/pad_15"
                android:text="Contact Us"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_size_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/colorNormalGrey" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtRateApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/pad_19"
                android:drawableStart="@drawable/rating_pink_24"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/pad_15"
                android:paddingLeft="@dimen/pad_12"
                android:paddingRight="@dimen/pad_15"
                android:paddingTop="@dimen/pad_15"
                android:text="Rate the App"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_size_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/colorNormalGrey" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/pad_25"
                android:drawableStart="@drawable/logout_copy"
                android:gravity="center_vertical"
                android:padding="@dimen/pad_17"
                android:text="Log Out"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_size_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/colorNormalGrey" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtDelAcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/pad_25"
                android:drawableStart="@drawable/delete_account_copy"
                android:gravity="center_vertical"
                android:padding="@dimen/pad_16"
                android:text="Delete Account"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_size_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/colorNormalGrey" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/pad_15"
                android:gravity="bottom"
                android:padding="@dimen/pad_10"
                android:text="1.0"
                android:textColor="@color/color_vvvDarkGrey"
                android:textSize="@dimen/txt_size_11sp" />

        </LinearLayout>

        <!--<com.ureview.utils.views.CustomTextView
            android:id="@+id/txtVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/llOptions"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:padding="@dimen/pad_10"
            android:text="1.0"
            android:textColor="@color/color_vvvDarkGrey"
            android:textSize="@dimen/txt_size_11sp" />-->

    </RelativeLayout>

</ScrollView>