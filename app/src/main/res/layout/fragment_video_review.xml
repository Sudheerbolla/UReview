<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/play_button_copy" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_vvvDarkGrey">

            <ImageView
                android:id="@+id/imgPlay"
                android:layout_width="@dimen/pad_30"
                android:layout_height="@dimen/pad_30"
                android:padding="@dimen/pad_5"
                android:src="@android:drawable/ic_media_play" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/pad_8"
                android:text="2.30"
                android:textColor="@color/color_white"
                android:textSize="@dimen/txt_size_12sp" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/pad_3"
                android:layout_marginRight="@dimen/pad_3"
                android:layout_toLeftOf="@+id/txtDuration"
                android:layout_toRightOf="@+id/imgPlay"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@android:color/transparent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/pad_15"
            android:paddingRight="@dimen/pad_15"
            android:paddingTop="@dimen/pad_20">

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtSynth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_5"
                android:text="Synth polaroid biology"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_size_18sp" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtLocType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_custom_btn_purple_color"
                android:paddingBottom="@dimen/pad_8"
                android:paddingLeft="@dimen/pad_13"
                android:paddingRight="@dimen/pad_13"
                android:paddingTop="@dimen/pad_8"
                android:text="Hotel/Resort"
                android:textColor="@color/color_white"
                android:textSize="@dimen/txt_size_13sp" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtViewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSynth"
                android:layout_marginTop="@dimen/pad_5"
                android:drawableLeft="@drawable/view_small_copy"
                android:drawablePadding="@dimen/pad_8"
                android:text="408121"
                android:textColor="@color/color_vvvDarkGrey"
                android:textSize="@dimen/txt_size_12sp" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtShareCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSynth"
                android:layout_marginLeft="@dimen/pad_10"
                android:layout_marginTop="@dimen/pad_5"
                android:layout_toRightOf="@+id/txtViewCount"
                android:drawableLeft="@drawable/share_small_copy"
                android:drawablePadding="@dimen/pad_8"
                android:text="232"
                android:textColor="@color/color_vvvDarkGrey"
                android:textSize="@dimen/txt_size_12sp" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtShareCount"
                android:layout_marginTop="@dimen/pad_15"
                android:text="Location"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/txt_size_11sp" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtLoc"
                android:layout_marginTop="@dimen/pad_5"
                android:text="Mirpur 10, Dhaka"
                android:textColor="@color/color_vvvDarkGrey"
                android:textSize="@dimen/txt_size_15sp" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtLocation"
                android:layout_marginTop="@dimen/pad_15"
                android:text="Rating"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/txt_size_11sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/CustomRatingBarL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtRate"
                android:layout_marginTop="@dimen/pad_6"
                android:isIndicator="true" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtRatingno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtRate"
                android:layout_marginLeft="@dimen/pad_3"
                android:layout_marginTop="@dimen/pad_5"
                android:layout_toRightOf="@+id/ratingBar"
                android:text="(500)"
                android:textColor="@color/color_vvvDarkGrey"
                android:textSize="@dimen/txt_size_16sp" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtRateVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtRate"
                android:background="@drawable/bg_custom_btn_app_color"
                android:gravity="center"
                android:paddingBottom="@dimen/pad_8"
                android:paddingLeft="@dimen/pad_13"
                android:paddingRight="@dimen/pad_13"
                android:paddingTop="@dimen/pad_8"
                android:text="Rate This Video"
                android:textColor="@color/color_white"
                android:textSize="@dimen/txt_size_13sp" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtRateVideo"
                android:layout_marginTop="@dimen/pad_15"
                android:text="Description"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/txt_size_11sp" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDesc"
                android:layout_marginTop="@dimen/pad_5"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer."
                android:textColor="@color/color_vvvDarkGrey"
                android:textSize="@dimen/txt_size_15sp" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtUploadedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDescription"
                android:layout_marginTop="@dimen/pad_15"
                android:text="Uploaded by"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/txt_size_11sp" />

            <RelativeLayout
                android:id="@+id/rlUploadedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtUploadedBy"
                android:layout_marginTop="@dimen/pad_8">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/pad_35"
                    android:layout_height="@dimen/pad_35"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher" />

                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/txtUBFollowStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_feed_btn_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_app_pink_btn"
                    android:gravity="center"
                    android:text="Follow"
                    android:textColor="@color/selector_txt_color"
                    android:textSize="@dimen/txt_size_15sp" />

                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/txtUBName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_5"
                    android:layout_marginRight="@dimen/pad_5"
                    android:layout_marginTop="@dimen/pad_3"
                    android:layout_toLeftOf="@+id/txtFollowStatus"
                    android:layout_toRightOf="@+id/imgProfile"
                    android:text="Terry Rodriguez"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/txt_size_15sp" />

                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/txtUploadedByLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtUBName"
                    android:layout_marginLeft="@dimen/pad_5"
                    android:layout_marginRight="@dimen/pad_5"
                    android:layout_marginTop="@dimen/pad_5"
                    android:layout_toLeftOf="@+id/txtFollowStatus"
                    android:layout_toRightOf="@+id/imgProfile"
                    android:text="Mirpur 10, Dhaka"
                    android:textColor="@color/color_vvvDarkGrey"
                    android:textSize="@dimen/txt_size_12sp" />
            </RelativeLayout>

            <View
                android:id="@+id/dividerView"
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:layout_below="@+id/rlUploadedBy"
                android:layout_marginTop="@dimen/pad_13"
                android:background="@color/colorGrey" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtTopRatedVideos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dividerView"
                android:layout_marginTop="@dimen/pad_8"
                android:text="Top Rated Videos"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_size_19sp" />

            <com.ureview.utils.views.CustomTextView
                android:id="@+id/txtSeeAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/dividerView"
                android:layout_marginTop="@dimen/pad_3"
                android:padding="@dimen/pad_8"
                android:text="See all"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/txt_size_15sp" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvTopVideos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_9"
            android:layout_marginRight="@dimen/pad_9" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>