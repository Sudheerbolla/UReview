<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/pad_20"
        android:layout_marginRight="@dimen/pad_20"
        android:layout_marginTop="@dimen/pad_20"
        android:gravity="center_horizontal" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/videoView"
        android:layout_alignEnd="@id/videoView"
        android:layout_alignStart="@id/videoView"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/pad_20"
        android:maxHeight="3dp"
        android:progressDrawable="@drawable/seekbar_custom"
        android:theme="@style/SeekBarTheme" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoView"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/pad_20"
        android:gravity="center"
        android:textColor="@color/colorBlack" />

</RelativeLayout>