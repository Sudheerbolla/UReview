<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/pad_35"
    android:layout_marginStart="@dimen/pad_35"
    android:background="@color/transparent"
    card_view:cardCornerRadius="@dimen/pad_9"
    card_view:cardElevation="@dimen/pad_5"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="@dimen/pad_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingEnd="@dimen/pad_15"
        android:paddingStart="@dimen/pad_15"
        android:paddingTop="@dimen/pad_15">

        <com.ureview.utils.views.CustomTextView
            android:id="@+id/txtHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_10"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_size_15sp"
            app:txt_font_type="bold" />

        <com.ureview.utils.views.CustomTextView
            android:id="@+id/txtHeading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/pad_20"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="@dimen/pad_5"
            android:gravity="center"
            android:lineSpacingExtra="1.2dp"
            android:textColor="@color/color_vvvDarkGrey"
            android:textSize="@dimen/txt_size_12sp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewListOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_20"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <com.ureview.utils.views.CustomTextView
            android:id="@+id/txtNegativeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/pad_12"
            android:text="Cancel"
            android:textColor="@color/color_vvvDarkGrey"
            android:textSize="@dimen/txt_size_15sp"
            app:txt_font_type="bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>