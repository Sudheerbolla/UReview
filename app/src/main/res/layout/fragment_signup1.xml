<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bg">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/pad_20"
        android:layout_marginLeft="@dimen/pad_20"
        android:layout_marginRight="@dimen/pad_20"
        android:layout_marginTop="@dimen/pad_20"
        app:cardCornerRadius="@dimen/pad_4"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/uireview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_5"
                    android:drawablePadding="@dimen/pad_8"
                    android:drawableTop="@drawable/logo_main_onboarding"
                    android:text="YouReview"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/txt_size_17sp"
                    app:txt_font_type="bold" />

                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_15"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/pad_5">

                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_gender"
                        android:button="@drawable/ic_male"
                        android:checked="true"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/pad_10"
                        android:paddingStart="@dimen/pad_10"
                        android:text="Male"
                        android:textColor="@color/color_vvvDarkGrey" />

                    <RadioButton
                        android:id="@+id/rbFeMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/pad_15"
                        android:background="@drawable/selector_gender"
                        android:button="@drawable/ic_female"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/pad_5"
                        android:paddingEnd="@dimen/pad_10"
                        android:paddingStart="@dimen/pad_10"
                        android:paddingTop="@dimen/pad_5"
                        android:text="Female"
                        android:textColor="@color/color_vvvDarkGrey" />

                </RadioGroup>

                <com.ureview.utils.views.CustomEditText
                    android:id="@+id/edtFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20"
                    android:layout_marginRight="@dimen/pad_20"
                    android:layout_marginTop="@dimen/pad_25"
                    android:background="@drawable/bg_edt_txt"
                    android:drawableLeft="@drawable/full_name_copy"
                    android:drawablePadding="@dimen/pad_13"
                    android:hint="First Name"
                    android:inputType="text"
                    android:paddingBottom="@dimen/pad_13"
                    android:paddingLeft="@dimen/pad_13"
                    android:paddingRight="@dimen/pad_13"
                    android:paddingTop="@dimen/pad_13"
                    android:textSize="@dimen/txt_size_14sp" />

                <com.ureview.utils.views.CustomEditText
                    android:id="@+id/edtLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20"
                    android:layout_marginRight="@dimen/pad_20"
                    android:layout_marginTop="@dimen/pad_8"
                    android:background="@drawable/bg_edt_txt"
                    android:drawableLeft="@drawable/full_name_copy"
                    android:drawablePadding="@dimen/pad_13"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:paddingBottom="@dimen/pad_13"
                    android:paddingLeft="@dimen/pad_13"
                    android:paddingRight="@dimen/pad_13"
                    android:paddingTop="@dimen/pad_13"
                    android:textSize="@dimen/txt_size_14sp" />

                <com.ureview.utils.views.CustomEditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20"
                    android:layout_marginRight="@dimen/pad_20"
                    android:layout_marginTop="@dimen/pad_8"
                    android:background="@drawable/bg_edt_txt"
                    android:drawableLeft="@drawable/email_copy"
                    android:drawablePadding="@dimen/pad_13"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="@dimen/pad_13"
                    android:paddingLeft="@dimen/pad_13"
                    android:paddingRight="@dimen/pad_13"
                    android:paddingTop="@dimen/pad_13"
                    android:textSize="@dimen/txt_size_14sp" />

                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/txtDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20"
                    android:layout_marginRight="@dimen/pad_20"
                    android:layout_marginTop="@dimen/pad_8"
                    android:background="@drawable/bg_edt_txt"
                    android:drawableLeft="@drawable/dob_copy"
                    android:drawablePadding="@dimen/pad_13"
                    android:hint="Date of birth *"
                    android:paddingBottom="@dimen/pad_13"
                    android:paddingLeft="@dimen/pad_13"
                    android:paddingRight="@dimen/pad_13"
                    android:paddingTop="@dimen/pad_13"
                    android:textSize="@dimen/txt_size_14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20"
                    android:layout_marginRight="@dimen/pad_20"
                    android:layout_marginTop="@dimen/pad_8"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.ureview.utils.views.CustomTextView
                        android:id="@+id/txtCountryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/pad_3"
                        android:background="@drawable/bg_edt_txt"
                        android:drawableEnd="@drawable/drop_down_copy"
                        android:drawablePadding="@dimen/pad_10"
                        android:drawableStart="@drawable/phone_copy"
                        android:hint="+91"
                        android:paddingBottom="@dimen/pad_13"
                        android:paddingLeft="@dimen/pad_13"
                        android:paddingRight="@dimen/pad_13"
                        android:paddingTop="@dimen/pad_13"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/txt_size_14sp" />

                    <com.ureview.utils.views.CustomEditText
                        android:id="@+id/edtMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/pad_3"
                        android:background="@drawable/bg_edt_txt"
                        android:hint="Mobile number"
                        android:inputType="phone"
                        android:maxLength="12"
                        android:paddingBottom="@dimen/pad_13"
                        android:paddingLeft="@dimen/pad_13"
                        android:paddingRight="@dimen/pad_13"
                        android:paddingTop="@dimen/pad_13"
                        android:textSize="@dimen/txt_size_14sp" />

                </LinearLayout>

                <com.ureview.utils.views.CustomEditText
                    android:id="@+id/edtLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_20"
                    android:layout_marginRight="@dimen/pad_20"
                    android:layout_marginTop="@dimen/pad_8"
                    android:background="@drawable/bg_edt_txt"
                    android:drawableLeft="@drawable/location_copy"
                    android:drawablePadding="@dimen/pad_13"
                    android:hint="Location*"
                    android:inputType="text"
                    android:paddingBottom="@dimen/pad_13"
                    android:paddingLeft="@dimen/pad_13"
                    android:paddingRight="@dimen/pad_13"
                    android:paddingTop="@dimen/pad_13"
                    android:textSize="@dimen/txt_size_14sp" />

                <com.ureview.utils.views.CustomTextView
                    android:id="@+id/txtNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/pad_15"
                    android:background="@drawable/bg_custom_btn_app_color"
                    android:gravity="center"
                    android:paddingBottom="@dimen/pad_10"
                    android:paddingEnd="@dimen/pad_35"
                    android:paddingStart="@dimen/pad_35"
                    android:paddingTop="@dimen/pad_10"
                    android:text="Submit"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/txt_size_14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pad_30" />

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>