<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/pad_15">

    <com.ureview.utils.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_size_16sp"
        app:txt_font_type="regular" />

    <com.ureview.utils.views.CustomEditText
        android:id="@+id/edtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_10"
        android:background="@drawable/bg_edt_txt"
        android:gravity="left|top"
        android:lines="10"
        android:maxLines="10"
        android:padding="@dimen/pad_5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/pad_10">

        <com.ureview.utils.views.CustomTextView
            android:id="@+id/txtNegative"
            style="@style/AppButtonStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/news_feed_active_bg"
            android:text="Cancel"
            android:textColor="@color/color_vvvDarkGrey" />

        <com.ureview.utils.views.CustomTextView
            android:id="@+id/txtPositive"
            style="@style/AppButtonStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Send" />

    </LinearLayout>
</LinearLayout>