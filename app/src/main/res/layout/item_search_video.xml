<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgLocation"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/pad_8"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtLocType"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_feed_btn_height"
        android:layout_alignBottom="@+id/imgLocation"
        android:layout_alignRight="@+id/imgLocation"
        android:layout_marginBottom="@dimen/pad_10"
        android:layout_marginRight="@dimen/pad_10"
        android:background="@drawable/resorts_bg"
        android:gravity="center"
        android:text="Hotel/Resort"
        android:textColor="@color/color_white"
        android:textSize="@dimen/txt_size_15sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtSynth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLocation"
        android:layout_marginTop="@dimen/pad_12"
        android:text="Synth polaroid biology"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/txt_size_18sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtViewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSynth"
        android:layout_marginTop="@dimen/pad_5"
        android:drawableLeft="@drawable/view_small_copy"
        android:drawablePadding="@dimen/pad_8"
        android:text="408121"
        android:textColor="@color/color_vvvDarkGrey"
        android:textSize="@dimen/txt_size_12sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtShareCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSynth"
        android:layout_marginLeft="@dimen/pad_10"
        android:layout_marginTop="@dimen/pad_5"
        android:layout_toRightOf="@+id/txtViewCount"
        android:drawableLeft="@drawable/share_small_copy"
        android:drawablePadding="@dimen/pad_8"
        android:text="232"
        android:textColor="@color/color_vvvDarkGrey"
        android:textSize="@dimen/txt_size_12sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtLocBtm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imgLocation"
        android:layout_marginTop="@dimen/pad_12"
        android:drawableLeft="@drawable/location_small_copy"
        android:drawablePadding="@dimen/pad_8"
        android:text="Mirpur 10, Dhaka"
        android:textColor="@color/color_vvvDarkGrey"
        android:textSize="@dimen/txt_size_14sp" />

    <com.ureview.utils.views.CustomTextView
        android:id="@+id/txtRatingsNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtLocBtm"
        android:layout_marginTop="@dimen/pad_5"
        android:text="(405)"
        android:textColor="@color/color_vvvDarkGrey"
        android:textSize="@dimen/txt_size_12sp" />

    <RatingBar
        style="@style/CustomRatingBarL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLocBtm"
        android:layout_marginRight="@dimen/pad_5"
        android:layout_marginTop="@dimen/pad_5"
        android:layout_toLeftOf="@+id/txtRatingsNo"
        android:isIndicator="true" />

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_15"
        android:layout_below="@id/txtShareCount" />

</RelativeLayout>