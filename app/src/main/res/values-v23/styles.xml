<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/color_white</item>
    </style>

    <style name="SeekBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_vvvDarkGrey</item>
        <item name="colorPrimaryDark">@color/color_vvvDarkGrey</item>
        <item name="colorAccent">@color/colorDarkGrey</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="growAnim">
        <item name="android:windowEnterAnimation">@anim/grow_in</item>
        <item name="android:windowExitAnimation">@anim/grow_out</item>
    </style>

</resources>