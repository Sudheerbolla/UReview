<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/pad_3" />
            <padding
                android:bottom="@dimen/pad_2"
                android:left="@dimen/pad_2"
                android:right="@dimen/pad_2"
                android:top="@dimen/pad_2" />
            <gradient
                android:angle="135"
                android:centerColor="#FE9D96"
                android:endColor="@color/app_color_light"
                android:startColor="@color/app_color_dark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_white" />
            <corners android:radius="@dimen/pad_3" />
        </shape>
    </item>
</layer-list>